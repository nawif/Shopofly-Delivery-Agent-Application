<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_margin="16dp"
        app:cardCornerRadius="16dp"
        app:cardElevation="6dp"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_margin="16dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                style="@style/title"
                android:drawablePadding="16dp"
                android:text="@string/customer_details"/>
            <TextView
                android:drawableTint="@color/textColorPrimaryDark"
                android:id="@+id/customer_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                style="@style/subtitle"
                android:drawablePadding="16dp"
                android:text="NAWAF ALQUAID"
                android:drawableStart="@drawable/ic_identification"/>
            <TextView
                android:drawableTint="@color/textColorPrimaryDark"
                android:id="@+id/customer_phone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                style="@style/subtitle"
                android:text="+966568484248"
                android:drawablePadding="16dp"
                android:drawableStart="@drawable/ic_phone_call"/>

            <TextView
                android:drawableTint="@color/textColorPrimaryDark"
                android:id="@+id/customer_location"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                style="@style/subtitle"
                android:text="Zawr hartih, aqiq 6262"
                android:drawablePadding="16dp"
                android:drawableStart="@drawable/ic_placeholder"/>
            <Button
                android:layout_marginTop="8dp"
                android:padding="16dp"
                android:layout_gravity="center"
                android:id="@+id/call_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/round_button"
                android:text="@string/call_customer"
                android:drawableStart="@drawable/ic_phone_call"
                android:drawableTint="#fff"
                android:drawablePadding="16dp"
                android:textColor="#fff"
                android:textStyle="bold" />


        </LinearLayout>

    </androidx.cardview.widget.CardView>
</LinearLayout>